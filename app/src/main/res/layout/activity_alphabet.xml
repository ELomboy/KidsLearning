            android:scaleType="centerCrop"
            android:src="@drawable/h"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/i"
            android:scaleType="centerCrop"
            android:src="@drawable/i"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/j"
            android:scaleType="centerCrop"
            android:src="@drawable/j"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/k"
            android:scaleType="centerCrop"
